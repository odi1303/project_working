<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.TableOrderScreenController">

    <TextArea fx:id="topText" editable="false" layoutX="20.0" layoutY="20.0" prefHeight="60.0" prefWidth="560.0" text="Good afternoon! Please specify your reservation :)" wrapText="true" />

    <HBox layoutX="20.0" layoutY="100.0" spacing="15.0">
        <ComboBox fx:id="reservationSpace" layoutX="20.0" layoutY="100.0" onMouseClicked="#initializeComboBoxForReservationSpace" prefHeight="26.0" prefWidth="144.0" promptText="Preferred location" />
    </HBox>

    <Button fx:id="showTheOptionsButtons" layoutX="20.0" layoutY="280.0" onAction="#showOptions" text="Show Options" />

    <HBox fx:id="possibleOptions" layoutX="20.0" layoutY="320.0" spacing="10.0" visible="false">
        <Button fx:id="option1" onAction="#selectReservation" text="" visible="false" />
        <Button fx:id="option2" onAction="#selectReservation" text="" visible="false" />
        <Button fx:id="option3" onAction="#selectReservation" text="" visible="false" />
        <Button fx:id="option4" onAction="#selectReservation" text="" visible="false" />
        <Button fx:id="option5" onAction="#selectReservation" text="" visible="false" />
    </HBox>

    <Button fx:id="homePageButton" layoutX="500.0" layoutY="350.0" onAction="#goToHomePage" prefHeight="30.0" prefWidth="90.0" text="Home Page" />

    <ComboBox fx:id="time" layoutX="342.0" layoutY="99.0" onMouseClicked="#initializeComboBoxForTime" prefHeight="26.0" prefWidth="175.0" promptText="Choose preferred time" />

    <DatePicker fx:id="reservationDate" layoutX="193.0" layoutY="99.0" prefHeight="26.0" prefWidth="114.0" promptText="Choose date" />

    <ComboBox fx:id="branch" layoutX="20.0" layoutY="155.0" onMouseClicked="#initializeComboBoxForBranch" prefHeight="26.0" prefWidth="122.0" promptText="Choose branch" />

    <TextField fx:id="guestNumber" layoutX="193.0" layoutY="155.0" prefHeight="26.0" prefWidth="234.0" promptText="Please enter the number of reservations" />

</AnchorPane>
