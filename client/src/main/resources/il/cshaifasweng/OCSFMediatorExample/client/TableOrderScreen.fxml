<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.Region?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.TableOrderScreenController"
            prefHeight="400.0" prefWidth="600.0">


    <TextArea fx:id="topText"
              layoutX="20.0"
              layoutY="20.0"
              prefHeight="60.0"
              prefWidth="560.0"
              text="Good afternoon! Please specify your reservation :)"
              editable="false"
              wrapText="true"/>

    <HBox layoutX="20.0" layoutY="100.0" spacing="15.0">



      <ComboBox fx:id="reservationSpace"
                layoutX="20.0"
                layoutY="100.0"
                prefWidth="100.0"
                onMouseClicked="#initializeComboBoxForReservationSpace"
                promptText="Please enter your preferred location"/>

      <TextField fx:id="guestNumber"
                layoutX="20.0"
                layoutY="160.0"
                prefWidth="100.0"
                promptText="Please enter the number of reservations"/>

      <ComboBox fx:id="time"
                layoutX="20.0"
                layoutY="220.0"
                prefWidth="100.0"
                onMouseClicked="#initializeComboBoxForTime"
                promptText="Choose your preferred time"/>
    </HBox>

    <Button fx:id="showTheOptionsButtons" text="Show Options" layoutX="20.0" layoutY="280.0" onAction="#showOptions"/>

    <HBox fx:id="possibleOptions" layoutX="20.0" layoutY="320.0" spacing="10.0" visible="false">

        <Button fx:id="option1" text="" visible="false" onAction="#selectReservation"/>
        <Button fx:id="option2" text="" visible="false" onAction="#selectReservation"/>
        <Button fx:id="option3" text="" visible="false" onAction="#selectReservation"/>
        <Button fx:id="option4" text="" visible="false" onAction="#selectReservation"/>
        <Button fx:id="option5" text="" visible="false" onAction="#selectReservation"/>

    </HBox>

    <Button fx:id="homePageButton"
            text="Home Page"
            layoutX="500.0"
            layoutY="350.0"
            prefWidth="90.0"
            prefHeight="30.0"
            onAction="#goToHomePage"/>

</AnchorPane>

