<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="436.0" prefWidth="638.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.FileAComplaint">
   <children>
      <ImageView fx:id="home_icon" fitHeight="62.0" fitWidth="60.0" layoutX="555.0" layoutY="348.0" onMouseClicked="#home_page" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@home.png" />
         </image>
      </ImageView>
      <Label layoutX="54.0" layoutY="34.0" text="File a complaint">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="email" layoutX="54.0" layoutY="76.0" prefHeight="26.0" prefWidth="514.0" promptText="Enter your email to get updates on the complaint's status" />
      <TextField fx:id="headline" layoutX="54.0" layoutY="120.0" prefHeight="26.0" prefWidth="325.0" promptText="Short description of the complaint" />
      <ComboBox fx:id="select_branch" layoutX="395.0" layoutY="121.0" onDragDetected="#selecting_branch" prefHeight="26.0" prefWidth="173.0" promptText="Chose branch" />
      <TextArea fx:id="description" layoutX="54.0" layoutY="162.0" prefHeight="192.0" prefWidth="514.0" promptText="Write your whole complaint here, make sure to add all the related details to your complaint" />
      <Button fx:id="submit_button" layoutX="54.0" layoutY="365.0" mnemonicParsing="false" onAction="#submit_complain" text="submit " />
      <Label fx:id="warning" layoutX="141.0" layoutY="369.0" prefHeight="18.0" prefWidth="401.0" text="To submit a complaint you need to fill all the fields, try again." textFill="RED" visible="false" />
   </children>
</AnchorPane>
