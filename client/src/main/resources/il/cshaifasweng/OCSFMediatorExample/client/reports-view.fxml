<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ReportsView">
   <children>
      <Label disable="true" layoutX="51.0" layoutY="40.0" text="Requests view">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button fx:id="back_button" layoutX="20.0" layoutY="361.0" mnemonicParsing="false" onAction="#to_go_back" text="back" />
      <AnchorPane fx:id="ch" layoutX="107.0" layoutY="105.0">
         <children>
            <LineChart fx:id="chart" layoutX="-7.0" layoutY="-16.0" prefHeight="270.0" prefWidth="413.0">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </LineChart>
         </children>
      </AnchorPane>
      <ComboBox fx:id="report_list" layoutX="230.0" layoutY="40.0" onAction="#chosing_report" prefHeight="26.0" prefWidth="313.0" promptText="to view a report chose one from the list" />
   </children>
</AnchorPane>
